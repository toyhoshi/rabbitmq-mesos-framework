{
  "id": "cluster-rabbitmq",
  "cpus": 1,
  "mem": 256,
  "instances": 1,
  "constraints": [
    ["hostname", "UNIQUE"],
    ["cluster-rabbitmq-host", "CLUSTER", "true"]
  ],
  "env": {
    "RABBITMQ_DEFAULT_USER": "admin",
    "RABBITMQ_DEFAULT_PASS": "cervedbi"
  },
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "docker.io/toyhoshi/rabbitmq-dcos",
      "forcePullImage": true,
      "network": "HOST",
      "privileged": true
    }
  },
  "healthChecks": [
    {
      "protocol": "TCP",
      "gracePeriodSeconds": 600
    }
  ],
  "upgradeStrategy": {
    "minimumHealthCapacity": 0,
    "maximumOverCapacity": 0
  }
}
